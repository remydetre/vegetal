<div id="formAddInformationPanel" class="panel">    <div class="panel-heading">        <i class="icon-info"></i>        Informations    </div>    <form id="formAddInformation" method="post"          action="{$link->getAdminLink('AdminOrders', true, [], ['vieworder' => 1, 'id_order' => $smarty.get.id_order])}">        <div class="row">            <div class="col-md-12">                <h2>Message pr√©parateur</h2>                <textarea class="form-control" name="message_preparateur" rows="4">{$message_preparateur}</textarea>                <hr>            </div>            <div class="col-md-6">                <h2>Transporteur</h2>                {foreach from=$carriers_order item='carrier_order'}                    <div class="input-group">                        <input type="checkbox" id="carrier_order-{$carrier_order.id_carrier_order}"                               name="carrier_order[{$carrier_order.id_carrier_order}]"                               {if isset($carriers_order_combination[$carrier_order.id_carrier_order])}checked{/if}>                        <label style="margin-left: 0.5rem;"                               for="carrier_order-{$carrier_order.id_carrier_order}"> {$carrier_order.name}</label>                        ({$carrier_order.description})                    </div>                {/foreach}            </div>            <div class="col-md-6">                <h2>Emballage</h2>                {foreach from=$packagings_order item='packaging_order'}                    <div class="input-group">                        <input type="checkbox" id="packaging_order-{$packaging_order.id_packaging_order}"                               name="packaging_order[{$packaging_order.id_packaging_order}]"                               {if isset($packagings_order_combination[$packaging_order.id_packaging_order])}checked{/if}>                        <label style="margin-left: 0.5rem;"                               for="packaging_order-{$packaging_order.id_packaging_order}"> {$packaging_order.name}</label>                        ({$packaging_order.description})                    </div>                {/foreach}            </div>            <div class="col-md-12">                <div class="text-right">                    <input type="hidden" name="validOrderFields">                    <input style="margin-top: 2rem" type="submit" class="btn btn-primary" value="Enregistrer">                </div>            </div>        </div>    </form></div>